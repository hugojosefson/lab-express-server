{
  "name": "lab-express-server",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Starting point for doing something with Express.",
  "main": "src/server.js",
  "scripts": {
    "start": "node --experimental-modules --es-module-specifier-resolution=node src/server.js",
    "dev": "nodemon --exec 'node --experimental-modules --es-module-specifier-resolution=node' src/server.js",
    "test": "run-s lint",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "author": "Hugo Josefson <hugo@josefson.org>",
  "repository": "hugojosefson/lab-express-server",
  "license": "MIT",
  "engines": {
    "node": "^12"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "body-parser": "^1.14.1",
    "express": "^4.17.1",
    "is-production": "^1.0.1",
    "nodemon": "^1.8.1"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "standard": "^13.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
